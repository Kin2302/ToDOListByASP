@model ToDoList.Models.TodoListViewModel

@{
    ViewData["Title"] = "Home Page";
}



<div class="text-center"> 
    <h1 class="display-4">To Do </h1>
    <ul>
        <form method="get" action="/Home/Index" class="mb-3">
            <div class="input-group">
                <input type="text" name="searchString" class="form-control" placeholder="Tìm việc cần làm...">

                <button class="btn btn-primary" type="submit">Tìm kiếm</button>
            </div>
        </form>



        @foreach (var item in Model.Items)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span class="@(item.isCompleted ? "text-decoration-line-through text-success" : "")">
                    @item.Text
                </span>

                <div>
                    @if (!item.isCompleted)
                    {
                        <form action="/Home/MarkComplete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-success me-2">✔</button>
                        </form>
                    }

                    <form action="/Home/Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                        <a href="/Home/Update?id=@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                    </form>
                </div>
            </li>
        }
    </ul>

	<a  class="btn btn-primary" href="/Home/Add">Add</a>
</div>
